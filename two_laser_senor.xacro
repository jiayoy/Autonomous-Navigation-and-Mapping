<robot name="my_sensors_rear" xmlns:xacro="http://wiki.ros.org/xacro">
  <gazebo reference="laser_rear">
    <sensor type="ray" name="rplidar_rear">
      <!-- 关键修复：加180度旋转 -->
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-2.356</min_angle>
            <max_angle>2.356</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.10</min>
          <max>30.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.005</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_rplidar_rear" filename="libgazebo_ros_laser.so">
        <topicName>/scan_rear</topicName>
        <frameName>laser_rear</frameName>
      </plugin>
    </sensor>
  </gazebo>
</robot>