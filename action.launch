<launch>
  <!-- 设置机器人模型 -->
  <param name="robot_description" command="$(find xacro)/xacro $(find gazebo_demo)/urdf/intergrater.xacro" />
  
  <!-- 机器人TF发布 -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
  
  <!-- 启动 Gazebo -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find gazebo_demo)/world/model.world" />
    <arg name="paused" value="false" />
    <arg name="use_sim_time" value="true" />
    <arg name="gui" value="true" />
    <arg name="headless" value="false" />
    <arg name="debug" value="false" />
  </include>
  
  <!-- 在 Gazebo 中生成机器模型 -->
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_model" 
        args="-urdf -model car -param robot_description -x 0 -y 0 -z 0.5" 
        respawn="false" output="screen" />
        
  <!-- 启动简单激光融合节点 -->
  <node name="simple_laser_merger" pkg="gazebo_demo" type="laser_merger.py" output="screen">
    <param name="front_topic" value="/scan_front"/>
    <param name="rear_topic" value="/scan_rear"/>
    <param name="output_topic" value="/merged"/>
  </node>
  
  <!-- 在RVIZ中快速验证 -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find gazebo_demo)/rviz/rviz.rviz" />
</launch>